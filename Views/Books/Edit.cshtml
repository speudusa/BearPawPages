@using BearPawPages.ViewModels
@model AddBookViewModel


<h1>Edit any information for your book:</h1>

<form method="post">
    <div asp-controller="Book" asp-action="EditBookData" class="form-group">
        <lable asp-for="Title">Title</lable>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div>
        <lable asp-for="Author">Author:</lable>
        <input asp-for="Author" />
        <span asp-validation-for="Author"></span>
    </div>

    <div>
        <lable asp-for="TotalPage">Total Number of Pages:</lable>
        <input asp-for="TotalPage" />
        <span asp-validation-for="TotalPage"></span>
    </div>

    <div>
        <lable asp-for="CurrentPage">Current Page:</lable>
        <input asp-for="CurrentPage" />
        <span asp-validation-for="CurrentPage"></span>
    </div>

    @*<div>
            <lable asp-for="ReadingDate">Date started reading:</lable>
            <input asp-for="ReadingDate"  />
            <span asp-validation-for="ReadingDate"></span>
        </div>*@

    <div>
        <lable asp-for="ReadingNotes">Reading Notes:</lable>
        <input asp-for="ReadingNotes" />
    </div>

    <input type="hidden" name="bookId" value="@Model.Id" />  @* **** ERROR:  CS1503:  System.NullReferenceException: 'Object reference not set to an instance of an object.'  ****   *@
    <input type="submit" value="Edit Book Info" />
</form>


