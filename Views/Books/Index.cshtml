@using BearPawPages.Models

@model List<Book>

<h1>BearPaw Pages Book Shelf</h1>

<p>
    <a asp-controller="Books" asp-action="Add">Add Book</a> 
</p>

<p>
    <a asp-controller="Books" asp-action="Delete">Delete Books</a>
</p>

@if (Model.Count == 0)
{
    <p>Looks like you need to add some books</p>
}
else
{
<table class="table">
    <tr>
        <th>
              
        </th>
        <th>
            No.
        </th>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Total Pages
        </th>
        <th>
            Current Page
        </th>
        @*<th>
            Reading Date  //waiting to the clicker
        </th>*@
        <th>
            Reading Notes
        </th>
    </tr>

    
        @foreach (var book in Model)
        {
<tr>
    <td> <a asp-controller="Books" asp-action="ReadBook" asp-route-id="@book.Id">Start Reading</a></td>
    <td>@book.Id</td>
    <td>@book.Title</td>
    <td>@book.Author</td>
    <td>@book.TotalPage</td>
    <td>@book.CurrentPage</td>
    @*<td>@book.ReadingDate</td>*@
    <td>@book.ReadingNotes</td>
    <td> <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id">Edit Book Info</a></td>
</tr>
        }

</table>
}

