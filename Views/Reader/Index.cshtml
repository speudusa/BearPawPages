@using BearPawPages.Models

@model List<Reader>

<h1>BearPaw Readers</h1>

@if (Model.Count == 0)
{
    <p>You need to add a Reader</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Reader's Name
            </th>
        </tr>

        @foreach (var reader in Model)
        {
            <tr>
                <td>
                    @reader.ReaderName;
                </td>
            </tr>
        }
    </table>
}